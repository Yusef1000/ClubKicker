<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.test1.yusef.hackapp.EnterActivity5">

    <Button
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="#FFFFFF"
        android:background="#3A3A3A"
        android:id="@+id/home"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:text="Fund"
        android:textColor="#FFFFFF"
        android:background="#3A3A3A"
        android:id="@+id/fund"
        android:layout_alignTop="@+id/home"
        android:layout_toRightOf="@+id/home" />

    <Button
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:text="Event"
        android:textColor="#FFFFFF"
        android:background="#3A3A3A"
        android:id="@+id/Event"
        android:layout_alignTop="@+id/fund"
        android:layout_toLeftOf="@+id/About"
        android:layout_toStartOf="@+id/About" />

    <Button
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:text="About"
        android:textColor="#FFFFFF"
        android:background="#3A3A3A"
        android:id="@+id/About"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Event Page"
        android:id="@+id/textView5"
        android:layout_below="@+id/home"
        android:layout_alignRight="@+id/Event"
        android:layout_alignEnd="@+id/Event" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_below="@+id/textView5"
        android:hint="Event Name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:hint="Date"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:layout_below="@+id/editText4"
        android:hint="Location"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_below="@+id/editText5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Description"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@+id/editText5"
        android:layout_alignEnd="@+id/editText5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New"
        android:textColor="#FFFFFF"
        android:background="#3A3A3A"
        android:id="@+id/button"
        android:layout_below="@+id/editText6"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
